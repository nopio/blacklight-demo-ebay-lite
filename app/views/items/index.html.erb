<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Format</th>
      <th>Brand</th>
      <th>Screen size</th>
      <th>Color</th>
      <th>Memory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.category_id %></td>
        <td><%= item.description %></td>
        <td><%= item.condition %></td>
        <td><%= item.price %></td>
        <td><%= item.format %></td>
        <td><%= item.brand_id %></td>
        <td><%= item.screen_size %></td>
        <td><%= item.color %></td>
        <td><%= item.memory %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

